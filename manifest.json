{
    "manifest_version": 3,
    "name": "BetterBluesky - Trends & more",
    "version": "2.2",
    "description": "Improve your Bluesky experience! Add Trending Topics, improve design and more!",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://bsky.app/*"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}